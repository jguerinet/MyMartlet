<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_redpressed">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin">

        <!--every other view is to the right of the checkbox-->

        <CheckBox
            android:id="@+id/course_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--first row-->

        <TextView
            android:id="@+id/course_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            app:layout_constraintLeft_toRightOf="@+id/course_checkbox"
            app:layout_constraintRight_toLeftOf="@+id/course_credits"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@id/course_credits"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="@dimen/padding_micro"
            android:layout_marginStart="@dimen/padding_micro"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/course_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--second row-->

        <TextView
            android:id="@+id/course_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/course_checkbox"
            app:layout_constraintRight_toLeftOf="@+id/course_dates"
            app:layout_constraintTop_toBottomOf="@+id/course_code" />

        <TextView
            android:id="@id/course_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            app:layout_constraintLeft_toRightOf="@+id/course_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_code" />

        <!--third row-->

        <TextView
            android:id="@+id/course_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_micro"
            android:textStyle="italic"
            app:layout_constraintLeft_toRightOf="@+id/course_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_type" />

        <!--fourth row-->

        <TextView
            android:id="@+id/course_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/course_checkbox"
            app:layout_constraintRight_toLeftOf="@+id/course_hours"
            app:layout_constraintTop_toBottomOf="@+id/course_title" />

        <TextView
            android:id="@id/course_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            app:layout_constraintLeft_toRightOf="@+id/course_days"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_title" />

        <!--fifth row-->

        <TextView
            android:id="@+id/course_spots"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/padding_micro"
            android:layout_marginRight="@dimen/padding_micro"
            android:layout_weight="0.5"
            android:textSize="@dimen/text_small"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/course_checkbox"
            app:layout_constraintRight_toLeftOf="@+id/course_waitlist"
            app:layout_constraintTop_toBottomOf="@+id/course_days" />

        <TextView
            android:id="@+id/course_waitlist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:textSize="@dimen/text_small"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/course_spots"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_days" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>